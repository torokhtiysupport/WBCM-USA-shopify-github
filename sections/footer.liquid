<style type="text/css">
   .footer,
   .footer__bottom {
        background-color: {{ section.settings.footer_bg }};
    }
    {% if section.settings.footer_heading_color %}
        .footer-nav__title.footer-nav__title {
          color: {{ settings.color_headings }};
        }
    {% endif %}
</style>
<footer role="contentinfo" id="footer" class="footer footer--{{ section.settings.footer_style }}{% if section.settings.divider %} footer-divider{% endif %}">
    <div class="container">
        <p>TEST</p>
        <div class="footer__content">
            <div class="o-layout">
                {% case section.blocks.size %}
                    {% when 1 %}
                        {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk' -%}
                    {% when 2 %}
                        {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk' -%}
                    {% when 3 %}
                        {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/3@desk' -%}
                    {% when 4 %}
                        {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/4@desk' -%}
                {% endcase %}

                {% for block in section.blocks %}
                    {% if block.type == 'linklist' %}
                        {% if linklists[block.settings.linklist].links.size > 0 %}
                            <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                                <div class="footer-nav">
                                    {% unless block.settings.title == blank %}
                                        <h3 class="footer-nav__title h5">{{ block.settings.title }}</h3>
                                    {% endunless %}
                                    <ul class="footer-nav__items o-list-bare">
                                        {% for link in linklists[block.settings.linklist].links %}
                                            <li class="footer-nav__item{% if link.active %} footer-nav__item--active{% endif %}"><a href="{{ link.url }}" class="footer-nav__link">{{ link.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                    {% if block.type == 'contact' %}
                        <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                            <div class="footer-nav">
                                {% unless block.settings.title == blank %}
                                    <h3 class="footer-nav__title h5">{{ block.settings.title }}</h3>
                                {% endunless %}
                                {% if block.settings.show_email %}
                                    <p class="footer-nav__text"><a aria-label="Mail to {{ shop.email }}" href="mailto:{{ shop.email }}" class="footer-nav__text-link">{{ shop.email }}</a></p>
                                {% endif %}
                                {% if block.settings.show_number %}
                                    <p class="footer-nav__text"><a aria-label="Call" href="tel:{{ shop.address.phone }}" class="footer-nav__text-link">{{ shop.address.phone }}</a></p>
                                {% endif %}
                                {% if block.settings.show_address %}
                                    <p class="footer-nav__text footer-nav__text--address">
                                        {{ shop.address.street }}<br/>
                                        {{ shop.address.city }} {{ shop.address.province }}<br/>
                                        {{ shop.address.zip }} {{ shop.address.country }}
                                    </p>
                                {% endif %}
                                {% if block.settings.show_social %}
                                    <div class="footer-nav__social-wrapper">
                                        <ul class="footer-nav__social-items o-list-bare">
                                            {% unless settings.social_facebook_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_facebook_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--facebook" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Facebook</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_twitter_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_twitter_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--twitter" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Twitter</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_pinterest_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_pinterest_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--pinterest" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Pinterest</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_instagram_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_instagram_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--instagram" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Instagram</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_tiktok_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_tiktok_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--tiktok" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">TikTok</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_tumblr_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_tumblr_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--tumblr" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Tumblr</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_snapchat_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_snapchat_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--snapchat" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Snapchat</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_youtube_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_youtube_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--youtube" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">YouTube</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_vimeo_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_vimeo_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--vimeo" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Vimeo</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_untappd_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_untappd_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--untappd" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">Untappd</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                            {% unless settings.social_linkedin_link == blank %}
                                                <li class="footer-nav__social-item">
                                                    <a href="{{ settings.social_linkedin_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                        <i class="icon icon--linkedin" aria-hidden="true"></i>
                                                        <span class="icon-fallback__text">LinkedIn</span>
                                                    </a>
                                                </li>
                                            {% endunless %}
                                        </ul>
                                    </div>
                                {% endif %}

                            </div>
                        </div>
                    {% endif %}
                    {% if block.type == 'text' %}
                        <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                            <div class="footer-nav">
                                {% unless block.settings.title == blank %}
                                    <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                {% endunless %}
                                {% unless block.settings.text == blank %}
                                    <div class="footer-nav__text rte">
                                        {{ block.settings.text }}
                                    </div>
                                {% endunless %}
                            </div>
                        </div>
                    {% endif %}
                    {% if block.type == 'twitter' %}
                        <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                            <div class="footer-nav footer-nav--tweet js-footer-tweet" data-footer-tweet-enable="{% if block.settings.username == blank %}false{% else %}true{% endif %}" data-footer-tweet-user="{{ block.settings.username }}">
                                <div id="footer-tweet" style="display: none"></div>
                                {% unless block.settings.title == blank %}
                                    <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                {% endunless %}
                                {% unless block.settings.username == blank %}
                                    <div class="footer-nav__text rte footer-tweet__text js-footer-tweet-text"></div>
                                    <a href="https://twitter.com/{{ block.settings.username }}" class="footer-tweet__link" target="_blank" rel="noopener">{{ block.settings.username }}</a>
                                {% endunless %}
                            </div>
                        </div>
                    {% endif %}
                    {% if block.type == 'image' %}
                        <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                            <div class="footer-nav footer-nav--image">
                                {% unless block.settings.link == blank %}
                                    <a href="{{ block.settings.link }}" class="footer-nav__image-link">
                                {% endunless %}
                                {% unless block.settings.image == blank %}
                                    <img
                                        class="footer-nav__image-img"
                                        src="{{ block.settings.image | img_url: '300x' }}"
                                        srcset="
                                            {{ block.settings.image | img_url: '180x' }} 180w {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                            {{ block.settings.image | img_url: '360x' }} 360w {{ 360 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                            {{ block.settings.image | img_url: '540x' }} 540w {{ 540 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                            {{ block.settings.image | img_url: '720x' }} 720w {{ 720 | divided_by: block.settings.image.aspect_ratio | round }}h
                                        "
                                        width="300"
                                        height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                        alt="{{ block.settings.image.alt }}"
                                        loading="lazy"
                                        style="max-width: {{ block.settings.image_width }}px"
                                    />
                                {% else %}
                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                                {% unless block.settings.link == blank %}
                                    </a>
                                {% endunless %}
                            </div>
                        </div>
                    {% endif %}
                    {% if block.type == 'social' %}
                        <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                            <div class="footer-nav footer-nav--social">
                                {% unless block.settings.title == blank %}
                                    <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                {% endunless %}
                                <ul class="footer-nav__social-items o-list-bare">
                                    {% unless settings.social_facebook_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_facebook_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--facebook" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Facebook</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_twitter_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_twitter_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--twitter" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Twitter</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_pinterest_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_pinterest_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--pinterest" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Pinterest</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_instagram_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_instagram_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--instagram" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Instagram</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_tiktok_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_tiktok_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--tiktok" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">TikTok</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_tumblr_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_tumblr_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--tumblr" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Tumblr</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_snapchat_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_snapchat_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--snapchat" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Snapchat</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_youtube_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_youtube_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--youtube" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">YouTube</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_vimeo_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_vimeo_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--vimeo" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Vimeo</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_untappd_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_untappd_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--untappd" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">Untappd</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                    {% unless settings.social_linkedin_link == blank %}
                                        <li class="footer-nav__social-item">
                                            <a href="{{ settings.social_linkedin_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                <i class="icon icon--linkedin" aria-hidden="true"></i>
                                                <span class="icon-fallback__text">LinkedIn</span>
                                            </a>
                                        </li>
                                    {% endunless %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="footer__bottom">
        <div class="container container--full">

            <div class="footer__bottom__left">
                {%- assign country_selector = false -%}
                {%- assign language_selector = false -%}
                {%- assign show_selectors = false -%}
                {%- assign both_selectors = false -%}

                {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                    {%- assign country_selector = true -%}
                {%- endif -%}

                {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                    {%- assign language_selector = true -%}
                {%- endif -%}

                {%- if country_selector or language_selector -%}
                    {%- assign show_selectors = true -%}
                {%- endif -%}

                {%- if country_selector and language_selector -%}
                    {%- assign both_selectors = true -%}
                {%- endif -%}

                {%- if show_selectors -%}
                    <div class="localize footer-localize footer__bottom__left-item{% if both_selectors %} localize--double{% else %} localize--single{% endif %}">
                        {%- form 'localization', id: 'FooterLocalizeForm', class: 'localize__form' -%}

                            {%- if country_selector -%}
                                <div class="localize__item__wrapper js-localize-wrapper">
                                    <h2 class="u-hidden-visually" id="country-heading-footer">
                                      {{ 'general.country.dropdown_label' | t }}
                                    </h2>

                                    <button type="button" class="localize__toggle js-localize-trigger" aria-expanded="false" aria-controls="country-list-footer" aria-describedby="country-heading-footer">{{ localization.country.name }} ({{ localization.country.currency.iso_code }} {{ localization.country.currency.symbol }})<i class="icon icon--down"></i></button>
                                    
                                    <div id="country-list-footer" class="localize__items localize__items--country js-localize-box o-list-bare">
                                        <ul class="localize__items-wrapper">
                                            {%- for country in localization.available_countries -%}
                                                <li class="localize__item">
                                                    <a class="localize__item__link js-localize-item{% if country.iso_code == localization.country.iso_code %} selected{% endif %}" href="#" {% if country.iso_code == localization.country.iso_code %}aria-current="true"{% endif %} data-value="{{ country.iso_code }}">{{ country.name }} <span class="localization-form__country">({{ country.currency.iso_code }} {{ country.currency.symbol }})</span></a>
                                                </li>
                                            {%- endfor -%}
                                        </ul>
                                    </div>

                                    <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}" data-disclosure-input>
                                </div>
                            {%- endif -%}

                            {%- if language_selector -%}
                                <div class="localize__item__wrapper js-localize-wrapper">

                                    <h2 class="u-hidden-visually" id="lang-heading-footer">{{ 'general.language.dropdown_label' | t }}</h2>

                                    <button type="button" class="localize__toggle js-localize-trigger" aria-expanded="false" aria-controls="lang-list-footer" aria-describedby="lang-heading-footer">{{ localization.language.endonym_name | capitalize }}<i class="icon icon--down"></i></button>

                                    <div id="lang-list-footer" class="localize__items localize__items--lang js-localize-box o-list-bare">
                                        <ul class="localize__items-wrapper">
                                            {%- for language in localization.available_languages -%}
                                                <li class="localize__item">
                                                    <a class="localize__item__link js-localize-item{% if language.iso_code == localization.language.iso_code %} selected{% endif %}" href="#" {% if language.iso_code == localization.language.iso_code %}aria-current="true"{% endif %} data-value="{{ language.iso_code }}">{{ language.endonym_name | capitalize }}</a>
                                                </li>
                                            {%- endfor -%}
                                        </ul>
                                    </div>

                                    <input type="hidden" name="locale_code" value="{{ localization.language.iso_code }}" data-disclosure-input>
                                </div>
                            {%- endif -%}

                        {%- endform -%}
                    </div>
                {%- endif -%}

                {%- if section.settings.show_payment_icons -%}
                    <div class="footer__icons footer__bottom__left-item">
                        {% unless shop.enabled_payment_types == empty %}
                            {%- assign payment_icons_available = 'amazon_payments,american_express,apple_pay,bitcoin,cirrus,dankort,diners_club,discover,dogecoin,dwolla,forbrugsforeningen,interac,jcb,litecoin,maestro,master,paypal,stripe,visa' | split: ',' -%}
                            <ul class="footer__icons-items o-list-bare">
                                {% for type in shop.enabled_payment_types %}
                                    <li class="footer__icons-item">
                                        {{ type | payment_type_svg_tag: class:'payment-icon' }}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endunless %}
                    </div>
                {%- endif -%}
            </div>

            <div class="footer__bottom__right">
                <div class="footer-copyright">
                    <p class="footer-copyright__text">
                        <!--<span class="footer-copyright__span footer-copyright__span--powered">{{ powered_by_link }}</span>-->
                        <span class="footer-copyright__span footer-copyright__span--shop">&copy; {{ 'now' | date: "%Y" }}, {{ shop.name }}</span>
                    </p>
                </div>
            </div>

        </div>
    </div>

</footer>

{% schema %}
{
    "name": "Footer",
    "class": "js-section__footer",
    "max_blocks": 4,
    "settings": [
        {
            "type": "color",
            "id": "footer_bg",
            "label": "Background color",
            "default": "#FFFFFF"
        },
        {
            "type": "select",
            "id": "footer_style",
            "label": "Text color",
            "default": "dark",
            "options": [
                {
                    "value": "light",
                    "label": "Light"
                },
                {
                    "value": "dark",
                    "label": "Dark"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "footer_heading_color",
            "label": "Use default heading color",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "show_payment_icons",
            "label": "Show payment icons",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "divider",
            "label": "Show dividing line",
            "default": true
        },
        {
            "type": "header",
            "content": "Country/Region Selector", 
            "info": "To add a country/region, go to your [payment settings.](/admin/settings/payments)"
        },
        {
            "type": "checkbox",
            "id": "enable_country_selector",
            "label": "Enable country/region selector",
            "default": true
        },
        {
            "type": "header",
            "content": "Language Selector",
            "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
        },
        {
            "type": "checkbox",
            "id": "enable_language_selector",
            "label": "Enable language selector",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "linklist",
            "name": "Menu",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Menu"
                },
                {
                    "type": "link_list",
                    "id": "linklist",
                    "label": "Menu",
                    "default": "footer",
                    "info": "This menu won't show dropdown items"
                }
            ]
        },
        {
            "type": "contact",
            "name": "Contact",
            "limit": 1,
            "settings": [
                {
                    "type": "paragraph",
                    "content": "Edit your contact info [here](/admin/settings/general)."
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Contact"
                },
                {
                    "type": "checkbox",
                    "id": "show_email",
                    "label": "Show email",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "show_number",
                    "label": "Show phone number",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "show_address",
                    "label": "Show address",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "show_social",
                    "label": "Show social",
                    "default": true,
                    "info": "Edit content in theme 'Theme settings > Social'."
                }
            ]
        },
        {
            "type": "social",
            "name": "Social",
            "limit": 1,
            "settings": [
                {
                    "type": "paragraph",
                    "content": "Edit content in theme 'Theme settings > Social'."
