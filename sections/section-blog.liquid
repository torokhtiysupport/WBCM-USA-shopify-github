{% if section.settings.bg_color == "rgba(0,0,0,0)" or section.settings.bg_color == settings.color_bg %}{% assign section_bg = false %}{% else %}{% assign section_bg = true %}{% endif %}
{% capture margin_class %}{% if section.settings.link == blank and section_bg == false %}section--mb-s{% endif %}{% endcapture %}

<section class="section section--{{ section.id }} {{ margin_class }} {% if section_bg %}section--has-bg{% else %}section--no-bg{% endif %} {% if section.settings.divider %}section--divider section--divider-p{% endif %}">
    <div class="container">
        {% if section.settings.title != blank %}
            <div class="section__title section__title--center">
                <h2 class="section__title-text">{{ section.settings.title | escape }}</h2>
            </div>
        {% endif %}
        <div class="section__bg" style="background-color: rgba(0,0,0,0)"></div>
    </div>

    {%- assign blog = blogs[section.settings.blog] -%}
    {%- assign show_tags = section.settings.blog_show_tags -%}
    {%- assign show_date = section.settings.blog_show_date -%}
    {%- assign show_read_more = section.settings.blog_show_read_more -%}

    {% case section.settings.grid %}
    {% when 1 %}
        {%- assign grid_item_width = 'u-1/1@tab' -%}
    {% when 2 %}
        {%- assign grid_item_width = 'u-1/2@tab' -%}
    {% when 3 %}
        {%- assign grid_item_width = 'u-1/2@tab u-1/3@desk' -%}
    {% endcase %}

    <div class="container{% if section.settings.grid == 1 %} container--tiny{% else %}{% if section.settings.section_width == 'full' %} container--full{% elsif section.settings.section_width == 'small' %} container--small{% else %} container--large{% endif %}{% endif %}">
        <div class="home-blog">
            <div class="home-blog__items">
                <div class="o-layout">
                    {% unless blog.empty? or blog.articles_count == 0 %}
                        {% for article in blog.articles limit: section.settings.post_limit %}
                            <div class="o-layout__item u-1/1 {{ grid_item_width }}">
                                {% render 'blog-grid-item', article: article, show_tags: show_tags, show_date: show_date, show_read_more: show_read_more, grid: section.settings.grid, image_ratio: section.settings.blog_image_ratio %}
                            </div>
                        {% endfor %}
                    {% else %}
                        {% for i in (1..section.settings.post_limit) %}
                            <div class="o-layout__item u-1/1 {{ grid_item_width }}">
                                <div class="blog{% unless show_date %} blog--no-date{% endunless %}">
                                    <div class="blog__media-wrapper">
                                        <a href="#" class="home-blog__link blog-link">
                                            <div class="blog__media">
                                                {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                                {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                            </div>
                                        </a>
                                    </div>
                                    <div class="blog__details">
                                        {% if show_date %}
                                            <div class="blog__date label">
                                                <p class="blog__date-text label__text">{{ 'homepage.onboarding.blog_date' | t }}</p>
                                            </div>
                                        {% endif %}
                                        <a href="#" class="home-blog__link blog-link">
                                            <h3 class="blog__title h3">{{ 'homepage.onboarding.blog_title' | t }}</h3>
                                        </a>
                                        {% if show_author %}
                                            <div class="blog__author">
                                                <p class="blog__author__text">{{ 'homepage.onboarding.blog_author' | t }}</p>
                                            </div>
                                        {% endif %}
                                        <div class="blog__text rte">
                                            {{ 'homepage.onboarding.blog_excerpt' | t }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endunless %}
                </div>
            </div>
        </div>

        {% unless section.settings.link == blank %}
            <div class="section__link--center">
                <a href="{{ section.settings.link }}" class="link link--arrow section__link-link">{{ section.settings.link_title | escape }}</a>
            </div>
        {% endunless %}
    </div>
</section>

{% schema %}
{
    "name": "Blog posts",
    "class": "js-section__home-blog",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Blog posts"
        },
        {
            "id": "blog",
            "type": "blog",
            "label": "Blog"
        },
        {
            "type": "range",
            "id": "post_limit",
            "label": "Posts",
            "min": 2,
            "max": 8,
            "step": 1,
            "default": 2
        },
        {
            "type": "range",
            "id": "grid",
            "label": "Posts per row",
            "min": 1,
            "max": 3,
            "step": 1,
            "default": 2
        },
        {
            "type": "select",
            "id": "section_width",
            "label": "Section width",
            "default": "small",
            "options": [
                {
                    "label": "Default",
                    "value": "large"
                },
                {
                    "label": "Narrow",
                    "value": "small"
                },
                {
                    "label": "Wide",
                    "value": "full"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "divider",
            "label": "Show dividing line",
            "default": false
        },
        {
            "type": "text",
            "id": "link_title",
            "label": "Link label",
            "default": "View all"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "header",
            "content": "Blog item settings"
        },
        {
            "type": "select",
            "id": "blog_image_ratio",
            "label": "Image ratio",
            "default": "4:3",
            "options": [
                {
                    "value": "1:1",
                    "label": "Square (1:1)"
                },
                {
                    "value": "3:4",
                    "label": "Portrait (3:4)"
                },
                {
                    "value": "4:3",
                    "label": "Landscape (4:3)"
                },
                {
                    "value": "16:9",
                    "label": "Wide (16:9)"
                },
                {
                    "value": "2:3",
                    "label": "Tall (2:3)"
                },
                {
                    "value": "natural",
                    "label": "Natural"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "blog_show_tags",
            "label": "Show tags",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "blog_show_date",
            "label": "Show date",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "blog_show_read_more",
            "label": "Show 'read more' link",
            "default": true
        }
    ],
    "presets": [
        {
            "name": "Blog posts",
            "settings": {
                "blog": "News",
                "post_limit": 2
            }
        }
    ]
}
{% endschema %}