        },
        {
            "type": "checkbox",
            "id": "text_heading_color",
            "label": "Use default heading color",
            "default": false
        },
        {
            "type": "header",
            "content": "Mobile"
        },
        {
            "type": "select",
            "id": "grid_mobile",
            "label": "Columns per row",
            "default": "1",
            "options": [
                {
                    "label": "1",
                    "value": "1"
                },
                {
                    "label": "2",
                    "value": "2"
                }
            ]
        },
        {
            "type": "select",
            "id": "mobile_layout",
            "label": "Layout style",
            "default": "carousel",
            "info": "Only one column is in view when using carousel layout.",
            "options": [
                {
                    "value": "carousel",
                    "label": "Carousel"
                },
                {
                    "value": "grid",
                    "label": "Grid"
                }
            ]
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Column",
            "settings": [
